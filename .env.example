# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Payment Configuration
PAYMENT_MODE=HDFC
# PAYMENT_MODE=RAZORPAY (alternative)
# PAYMENT_MODE=BANK_TRANSFER (alternative)

# ⚠️ HDFC Payment Gateway Configuration (PRODUCTION)
# DO NOT commit actual values! Get these from HDFC Bank
HDFC_API_KEY=your_production_api_key_here
HDFC_MERCHANT_ID=your_merchant_id
HDFC_PAYMENT_PAGE_CLIENT_ID=your_client_id
HDFC_BASE_URL=https://smartgateway.hdfc.bank.in
HDFC_RESPONSE_KEY=your_production_response_key_here
HDFC_ENABLE_LOGGING=false

# Bank Details (for manual payment option)
BANK_ACCOUNT_NAME=Your Company Name
BANK_ACCOUNT_NUMBER=XXXX-XXXX-XXXX
BANK_IFSC_CODE=XXXX0000XXX
BANK_NAME=Your Bank Name
UPI_ID=yourname@upi

# Razorpay Configuration (Optional - if using Razorpay)
# RAZORPAY_KEY_ID=your_razorpay_key
# RAZORPAY_KEY_SECRET=your_razorpay_secret

# ⚠️ Supabase Configuration (Database)
# Get these from https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# WordPress API Configuration
WORDPRESS_API_URL=https://immersivetrips.in/wp-json
WORDPRESS_API_TIMEOUT=10000
WORDPRESS_API_KEY=your_wordpress_api_key

# Test Mode (IMPORTANT: Set to false in production!)
ENABLE_TEST_MODE=false

# ⚠️ Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_gmail_app_password
EMAIL_FROM="Your Company <noreply@yourdomain.com>"
ADMIN_EMAIL=admin@yourdomain.com

# Security
JWT_SECRET=generate_a_strong_random_secret_here_min_32_chars
